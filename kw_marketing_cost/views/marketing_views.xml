<odoo>
    <menuitem id="kw_marketing_cost_kw_marketing_cost_menu"
              parent="crm.crm_menu_root"
              name="Marketing Cost" sequence="24"/>

    <record id="kw_marketing_cost_kw_marketing_cost_tree" model="ir.ui.view">
        <field name="name">kw.marketing.cost.tree (kw_marketing_cost)</field>
        <field name="model">kw.marketing.cost</field>
        <field name="arch" type="xml">
            <tree editable="top" create="true" delete="true">
                <field name="name"/>
                <field name="date"/>
                <field name="company_id" optional="hide"/>
                <field name="medium_id"/>
                <field name="source_id"/>
                <field name="campaign_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
            </tree>
        </field>
    </record>

    <record id="kw_marketing_cost_kw_marketing_cost_action_window"
            model="ir.actions.act_window">
        <field name="name">Marketing Cost</field>
        <field name="res_model">kw.marketing.cost</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="kw_marketing_cost_kw_marketing_cost_menu_tree"
              parent="kw_marketing_cost_kw_marketing_cost_menu"
              action="kw_marketing_cost_kw_marketing_cost_action_window"
              name="Marketing Cost" sequence="10"/>
</odoo>
